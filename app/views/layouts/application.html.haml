!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      = full_title(yield(:title))
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    
    %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyAPBRFRX1DMSuZk3JyY1UXtlNLrIXLZ8HA&sensor=false"}

    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Pacifico|Niconne', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://yui.yahooapis.com/pure/0.6.0/pure-min.css', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css', rel: 'stylesheet', type: 'text/css'

    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}

  %body
    = render 'header'
    = render 'flash_messages'
    = yield
    =# debug(params) if Rails.env.development?
    =# console if Rails.env.development?
