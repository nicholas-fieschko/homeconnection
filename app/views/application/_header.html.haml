%header.home-menu.pure-menu.pure-menu-horizontal
  =link_to render("logo"), '/', class: "pure-menu-heading #{current_page?('/') && !signed_in? ? 'logo-homepage' : nil}", id: "logo"
  %span.header-menu-items
    %ul.pure-menu-list
      - if signed_in?
        - # Signed in user Navbar
        %li.pure-menu-item
          Signed in as
          = link_to current_user.name, current_user, id: "header-username", class: gender_category_class
        %li.pure-menu-item
          = link_to edit_user_registration_path(current_user) do
            Settings
        %li.pure-menu-item
          =# link_to user_conversations_path(current_user) do
          Inbox
        %li.pure-menu-item
          = link_to '/dashboard' do
            Dashboard
        %li.pure-menu-item
          = link_to "Sign out", destroy_user_session_path, method: "delete", id: 'sign-out-button', class: "btn btn-header btn-sign-out"
      - else                             
        - # Signed in user Navbar
        %li.pure-menu-item
          - unless current_page? new_user_registration_path
            = link_to "Sign up", new_user_registration_path, 
            id: 'sign-up-button', class: "btn btn-header #{current_page?('/') && !signed_in? ? 'btn-lg-header' : nil} btn-sign-up"
        %li.pure-menu-item
          - unless current_page? new_user_session_path
            = link_to "Sign In", new_user_session_path, 
            id: 'sign-in-button', class: "btn btn-header #{current_page?('/') && !signed_in? ? 'btn-lg-header' : nil} btn-sign-in"