.pure-g.grid-columns-container
  .pure-u-1-16
  .pure-u-7-8#signup-column
    %h2.cursive#signup-title Let's get started!
    = form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "pure-form pure-form-aligned" } do |f|
      = devise_error_messages!
      %fieldset
        .pure-control-group
          = f.label :email
          = f.email_field :email, autofocus: true
        .pure-control-group
          = f.label :name
          = f.text_field :name
        .pure-control-group
          = f.label :zipcode
          = f.text_field :zipcode
        .pure-control-group
          = f.hidden_field :provider
          = f.hidden_field :provider, value: params[:is_provider]
        .pure-control-group
          = f.hidden_field :privacy_email
          = f.hidden_field :privacy_email, value: User.default_privacy[:privacy_email]
        .pure-control-group
          = f.hidden_field :privacy_activity
          = f.hidden_field :privacy_activity, value: User.default_privacy[:privacy_activity]
        .pure-control-group
          = f.hidden_field :privacy_name
          = f.hidden_field :privacy_name, value: User.default_privacy[:privacy_name]
        .pure-control-group
          = f.hidden_field :privacy_location
          = f.hidden_field :privacy_location, value: User.default_privacy[:privacy_location]
        .pure-control-group
          = f.hidden_field :privacy_gender
          = f.hidden_field :privacy_gender, value: User.default_privacy[:privacy_gender]
        .pure-control-group
          = f.hidden_field :privacy_age
          = f.hidden_field :privacy_age, value: User.default_privacy[:privacy_age]
        .pure-control-group
          = f.hidden_field :privacy_about
          = f.hidden_field :privacy_about, value: User.default_privacy[:privacy_about]
        .pure-control-group
          = f.hidden_field :privacy_resources
          = f.hidden_field :privacy_resources, value: User.default_privacy[:privacy_resources]
        .pure-control-group
          = f.hidden_field :privacy_resources_info
          = f.hidden_field :privacy_resources_info, value: User.default_privacy[:privacy_resources_info]
        .pure-control-group
          = f.hidden_field :privacy_exchanges
          = f.hidden_field :privacy_exchanges, value: User.default_privacy[:privacy_exchanges]
        .pure-control-group
          = f.label :password
          = f.password_field :password, autocomplete: "off", placeholder: "(#{@minimum_password_length} character minimum)"
        .pure-control-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"
        %br
        .actions
          = f.submit "Sign up", class: "btn btn-lg btn-success cursive", id: "signup-button"
    = render "devise/shared/links"
  .pure-u-1-16


